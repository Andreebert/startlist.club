            <thead>
                <tr>
                    <th>
                        @_("Plane")
                    </th>
                    <th>
                        @_("Pilot")
                    </th>
                @if (enableLogStartTypeColumn)
                {
                    <th></th> }
                @if (enableLogTachoColumn)

@model IEnumerable<FlightJournal.Web.Models.Club>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-condensed">
    <tr>
        <th>
            @Html.LabelFor(model => Model.FirstOrDefault().ShortName)
        </th>
        <th>
            @Html.LabelFor(model => Model.FirstOrDefault().Name)
        </th>
        <th>
            @Html.LabelFor(model => Model.FirstOrDefault().Website)
        </th>
        <th>
            @Html.LabelFor(model => Model.FirstOrDefault().Location)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Website)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ClubId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ClubId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ClubId })
            </td>
        </tr>
    }

</table>

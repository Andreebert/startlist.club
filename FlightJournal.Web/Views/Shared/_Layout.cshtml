@using FlightJournal.Web
@using FlightJournal.Web.Controllers
@using FlightJournal.Web.Extensions
@using FlightJournal.Web.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
    @Html.Action("GoogleAnalyticsPartial", "Home")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Request.IsClub() && !String.IsNullOrWhiteSpace(Request.Club().Website))
                {
                    @Html.ActionLink(Request.Club().Name, "Index", "Home", null, new { @class = "navbar-brand hidden-sm" })
                    @Html.ActionLink(Request.Club().ShortName, "Index", "Home", null, new { @class = "navbar-brand hidden-xs hidden-md hidden-lg" })
                }
                else if (Request.IsClub() && !String.IsNullOrWhiteSpace(Request.Club().Name))
                {
                    @Html.ActionLink(Request.Club().Name, "Index", "Home", null, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Startlist.club", "Index", "Home", null, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    
                    <li>@Html.MenuLink("Dagsrapporter", "Index", "Report")</li>
                    @if (!Request.IsClub() && Request.IsPilot())
                    {
                        <li>@Html.ActionLink(" Dagsrapporter (" + Request.Pilot().Club.ShortName + ")", "Index", "Report", new { club = Request.Pilot().Club.ShortName }, null)</li>
                    }
                    @if (Request.IsAuthenticated)
                    {
                        if (Request.IsClub())
                        {
                            <li>@Html.MenuLink("Startliste", "Grid", "Flight")</li>
                        }
                        else if (Request.IsPilot())
                        {
                            <li>@Html.ActionLink(" Startliste (" + Request.Pilot().Club.ShortName + ")", "Grid", "Flight", new { club = Request.Pilot().Club.ShortName }, null)</li>
                        }
                    }
                    @if (User.IsPilot() && Request.Club().ClubId == User.Pilot().Club.ClubId)
                    {
                        <li>@Html.MenuLink("Logbog", "Pilot", "Report")</li>
                    }
                    @if (Request.IsClub() && !string.IsNullOrWhiteSpace(Request.Club().Website) && !User.IsEditor())
                    {
                        <li><a href="@Request.Club().Website" class="hidden-sm">@Request.Club().Website.Replace("http://", string.Empty).Replace("www.", string.Empty)</a></li>
                    }
                    @if (!Request.IsAuthenticated)
                    {
                        <li>@Html.MenuLink("Om startlist.club", "Index", "Home")</li>
                    }

                    @if (User.IsEditor())
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Opsætning <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.MenuLink("Fly", "Index", "Plane")</li>
                                <li>@Html.MenuLink("Landingssteder", "Index", "Location")</li>
                                @if (User.IsManager())
                                {
                                    <li>@Html.MenuLink("Piloter", "Index", "Pilot")</li>
                                }
                                @if (User.IsAdministrator())
                                {
                                    <li class="divider"></li>
                                    <li>@Html.MenuLink("Roles", "Index", "RolesAdmin")</li>
                                    <li>@Html.MenuLink("Users", "Index", "UsersAdmin")</li>
                                    <li class="divider"></li>
                                    <li>@Html.MenuLink("Startmetoder", "Index", "StartType")</li>
                                    <li>@Html.MenuLink("Klubber", "Index", "Club")</li>
                                }
                            </ul>
                        </li>
                    }
                    @if (!User.IsPilot() && Request.IsAuthenticated)
                    {
                        <li>@Html.MenuLink("[Opret relation til pilotprofil]", "ManagePilotBinding", "Manage")</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.IsPilot() && Request.Club().ClubId != User.Pilot().Club.ClubId)
                    {
                        <li>
                            <a href="javascript:document.getElementById('goHomeForm').submit()"><span class="glyphicon glyphicon-home"></span> @User.Pilot().Club.ShortName</a>
                            @using (Html.BeginForm("SetCurrentClub", "Club", FormMethod.Post, new { id = "goHomeForm", Style = "display:none;" }))
                            {
                                <input type="hidden" name="shortName" value="@User.Pilot().Club.ShortName" />
                            }
                        </li>
                    }
                    @if (User.IsPilot() && Request.Club().ClubId != User.Pilot().Club.ClubId)
                    {
                        <li>@Html.MenuLink("Logbog", "Pilot", "Report")</li>
                    }
                    @Html.Partial("_LoginPartial")
                </ul>
</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderSection("featured", required: false)
        @RenderBody()
        <hr />
        <footer>
            <p class="pull-right btn-xs"><span class="glyphicon glyphicon-stats"></span>&nbsp; @DateTime.Now.ToString("f") </p>
            @Html.Action("ClubSelector", "Club")
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

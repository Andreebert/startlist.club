@model FlightJournal.Web.Models.Flight
@if (Model.TachoDeparture.HasValue && Model.TachoLanding.HasValue)
{ 
    @Model.TachoDeparture
    @:-
    @Model.TachoLanding
    @: (@(Model.TachoLanding.Value - Model.TachoDeparture.Value))
}
else if (Model.TachoDeparture.HasValue)
{
    @Model.TachoDeparture
    <text> - ?</text> 
}
else if (Model.TachoLanding.HasValue)
{
    <text>? - </text>
    @Model.TachoLanding 
}

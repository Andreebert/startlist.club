@model IEnumerable<FlightJournal.Web.Models.Pilot>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-hover table-condensed">
    <tr>
        <th>
            Name
        </th>
        <th>
            UnionId
        </th>
        <th>
            MemberId
        </th>
        <th>
            Club
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club.ShortName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.PilotId }) |
                @Html.ActionLink("Details", "Details", new { id = item.PilotId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PilotId })
            </td>
        </tr>
    }

</table>

@model FlightJournal.Web.Models.ApplicationUser

@{
    ViewBag.Title = _("Details");
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>@_("User")</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
    </dl>
</div>
<h4>@_("List of roles for this user")</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    <hr />
    <p>@_("No roles found for this user.")</p>
}

<table class="table">

    @foreach (var item in ViewBag.RoleNames)
    {
        <tr>
            <td>
                @item
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink(_("Edit"), "Edit", new { id = Model.Id }) |
    @Html.ActionLink(_("Back to List"), "Index")
</p>




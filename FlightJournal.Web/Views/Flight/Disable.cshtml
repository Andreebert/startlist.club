@model FlightJournal.Web.Models.Flight

@{
    ViewBag.Title = _("Delete");
}

<h2>@_("Confirm deletion")</h2>
@using (Html.BeginForm())
{
    @Html.Hidden("UrlReferrer", (string)ViewBag.UrlReferrer)
    <div class="row">
        <div class="col-md-4">
            <div class="alert alert-danger">
                <h4>@_("Are you sure you want to delete this flight?")</h4>
                <div class="btn-group">
                    <input type="submit" value="@_("Delete")" class="btn btn-danger" />
                    <a href="@ViewBag.UrlReferrer" class="btn btn-default">@_("Back")</a>
                </div>
            </div>
        </div>
    </div>
}
<fieldset>
    <legend>@_("Flight")</legend>
    <div class="row">
        <div class="col-md-4 col-sm-6 col-xs-12">
            <div class="display-label">
                @Html.LabelFor(model => model.Date)
            </div>

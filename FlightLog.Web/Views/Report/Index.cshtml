                <tbody>
                    @foreach (var item in from c in Model.Flights
                                         group c by new { c.Plane, c.Pilot } into g
                                         select new { Plane = g.Key.Plane, Pilot = g.Key.Pilot, Count = g.Count(), ItemFlights = g })
